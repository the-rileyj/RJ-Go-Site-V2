<!DOCTYPE html>
<html>

<head>
    <title>RJ's Naruto Watcher</title>
    {{template "defaulthead"}}
    <style>
        #main {
            height: 100vh;
            width: 100%;
        }

        #loading {
            align-items: center;
            display: flex;
            height: 100%;
            justify-content: center;
        }

        #dualRing {
            display: inline-block;
            width: 7vh;
            height: 7vh;
        }

        #dualRing:after {
            content: " ";
            display: block;
            width: 7vh;
            height: 7vh;
            margin: 1px;
            border-radius: 50%;
            border: 5px solid #fff;
            border-color: #fff transparent #fff transparent;
            animation: dualRing 1.2s linear infinite;
        }

        @keyframes dualRing {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
        }

        #login {
            display: grid;
            grid-template-rows: 2fr 1fr .25fr 1fr .25fr 1fr .25fr 1fr 2fr;
            grid-template-columns: .5fr 1fr .5fr;
            grid-template-areas:
            ". . ."
            ". loginResponse ."
            ". . ."
            ". username ."
            ". . ."
            ". password ."
            ". . ."
            ". loginButton ."
            ". . .";
            height: 100%;
            width: 100%;
        }

        #loginResponse {
            color: red;
            grid-area: loginResponse;
            text-align: center;
        }

        #username {
            grid-area: username;
        }

        #password {
            grid-area: password;
        }

        #loginButton {
            border-radius: .25rem;
            grid-area: loginButton;
        }
    </style>
</head>

<body>
    {{template "header"}}
    <form id="main" target="/authenticate" method="POST">
        <div id="loading">
            <div id="dualRing"></div>
        </div>
        <div id="login" style="display: none">
            <div id="loginResponse"></div>
            <input placeholder="Username" name="username" id="username" type="text">
            <input placeholder="Password" name="password" id="password" type="password">
            <button id="loginButton" type="submit">login</button>
        </div>
    </form>
    <div id="Home" class="spacer"></div>
    {{template "footer"}}
    <!-- <script src="/public/javascript/axios.min.js" type="text/javascript"></script>
    <script src="/public/javascript/naruto.js" type="text/javascript">

    </script> -->
</body>

</html>